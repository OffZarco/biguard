{% extends 'base.html.twig' %}

{% block title %}Questions index
{% endblock %}

{% block body %}

	{% include "partials/navbarFixed.html.twig" %}

	<section class="crud">
		<h1>Questions index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for question in questions %}
					<tr>
						<td>{{ question.id }}</td>
						<td>{{ question.title }}</td>
						<td>{{ question.description }}</td>
						<td class="button">
							{{ include('admin/questions/_delete_form.html.twig') }}
							<a href="{{ path('app_admin_questions_edit', {'id': question.id}) }}"><i class="fa-solid fa-pen"></i></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_questions_new') }}">Create new</a>
	</section>
{% endblock %}
